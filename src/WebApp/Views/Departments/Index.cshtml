<script type="text/javascript">
    //load data by key
    var departmentid = 0;
    function loadData(id,data) {
         $("#detailswindow").window("open");
         departmentid = id;
         $('#department_form').form('load', data);
             }
    var $editform = $('#department_form');
    // save item
    function saveitem() { 
        if ($editform.form('enableValidation').form('validate')) {
            var department = $editform.serializeJSON();
                        var url = '/Departments/EditAsync';
            //判断是新增或是修改方法
            if (department.Id <= 0 || department.Id === null || department.Id === '') {
                url = '/Departments/CreateAsync';
            }
            var token = $('input[name="__RequestVerificationToken"]', $editform).val();
            $.ajax({
                    type: "POST",
                    url: url,
                    data: {
                        __RequestVerificationToken: token,
                        department:department
                    },
                    dataType: 'json',
                    contentType: 'application/x-www-form-urlencoded; charset=utf-8'
                })
                .done(response => {
                    if (response.success) {
                        $dg.datagrid('reload');
                        $.messager.alert("提示", "保存成功！","info");
                        $('#detailswindow').window("close");
                    } else {
                        $.messager.alert("错误",   response.err, "error");
                    }
                    })
                .fail((jqXHR, textStatus, errorThrown) => {
                        $.messager.alert("异常",   errorThrown,"error");
                    });
        }
    }
    // close window
    function closewindow() {
        $('#detailswindow').window('close');
    }
    // print form
    function printitem() {
         console.log('print.....');
    }

 
</script>


