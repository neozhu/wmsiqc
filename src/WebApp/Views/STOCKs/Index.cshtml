  @{ Html.RenderPartial("_ImportWindow", new ViewDataDictionary { { "EntityName", "STOCK" } }); }
  <!-- end file upload partial view -->
  <!-- detail popup window -->
  @{ Html.RenderPartial("_PopupDetailFormView", new WebApp.Models.STOCK()); }
