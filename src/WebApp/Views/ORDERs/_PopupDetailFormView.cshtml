<script type="text/javascript">
  //判断新增编辑状态
  var MODELSTATE = 'Added';
  var orderid = null;
  var hasChanged = false;
  function opendetailwindow(data, state) {
    MODELSTATE = state;
    initdetailview();
    orderid = (data.ID || 0);
    $("#detailswindow").window("open");
    $('#order_form').form('reset');
    $('#order_form').form('load', data);
    var url = '/ORDERDETAILS/GetDataByORDERIDAsync?orderid=' + orderid;
    $orderdetailsdg.datagrid('load', url);
    $orderdetailsdg.datagrid('resize');
    var url = '/PICKDETAILs/GetDataByORDERIDAsync?orderid=' + orderid;
    $pickdetailsdg.datagrid('load', url);
    $pickdetailsdg.datagrid('resize');


    $('#SUPPLIERCODE').combogrid('grid').datagrid('load', '/SUPPLIERs/GetComboData');
    var pager = $('#SUPPLIERCODE').combogrid('grid').datagrid('getPager');
    pager.pagination({
      layout: ['first', 'prev', 'links', 'next', 'last']
    });

    if (MODELSTATE != 'Added' && data.STATUS != '100') {
      $('#order_form').form('disable');
      $('#orderdetail_form').form('disable');
      $('#pickdetail_form').form('disable');

      $('.window-body-toolbar *').prop('disabled', true);
      $('.panel-body-toolbar *').prop('disabled', true);
    } else {
      $('#order_form').form('enable');
      $('#orderdetail_form').form('enable');
      $('#pickdetail_form').form('enable');

      $('.window-body-toolbar *').prop('disabled', false);
      $('.panel-body-toolbar *').prop('disabled', false);
    }

  }
  //删除当前记录
  function deleteitem() {
    if ($('#STATUS', '#order_form').combobox('getValue') != '100') {
      $.messager.alert('提示', '只有<span class="required"> [待出货] </span>状态才允许删除!', 'info');
      return;
    }

    $.messager.confirm('确认', '你确定要删除该记录?', result => {
      if (result) {
        const url = `/ORDERs/DeleteAsync/${orderid}`;
        $.get(url).done(res => {
          if (res.success) {
            toastr.success("删除成功");
            $dg.datagrid('reload');
            $("#detailswindow").window("close");
          } else {
            $.messager.alert("错误", res.err, "error");
          }
        });
      }
    });
  }
  //async 保存数据
  async function saveitem() {
    var $editform = $('#order_form');
    if ($editform.form('enableValidation').form('validate')) {
      let order = $editform.serializeJSON();
      //获取明细表数据

      const orderdetails_res = await orderdetails_accept();
      if (!orderdetails_res.success) {
        return false;
      } else {
        if (orderdetails_res.changed) {
          order.ORDERDETAILS = orderdetails_res.changed;
        }
      }


      const pickdetails_res = await pickdetails_accept();
      if (!pickdetails_res.success) {
        return false;
      } else {
        if (pickdetails_res.changed) {
          order.PICKDETAILS = pickdetails_res.changed;
        }
      }

      let url = '/ORDERs/EditAsync';
      //判断是新增或是修改方法
      if (MODELSTATE === 'Added') {
        url = '/ORDERs/CreateAsync';
      }
      var token = $('input[name="__RequestVerificationToken"]', $editform).val();
      $.ajax({
        type: "POST",
        url: url,
        data: {
          __RequestVerificationToken: token,
          order: order
        },
        dataType: 'json',
        contentType: 'application/x-www-form-urlencoded; charset=utf-8'
      })
        .done(response => {
          if (response.success) {
            hasChanged = false;
            $editform.form('disableValidation');
            $dg.datagrid('reload');
            $('#detailswindow').window("close");
            toastr.success("保存成功");
          } else {
            $.messager.alert("错误", response.err, "error");
          }
        })
        .fail((jqXHR, textStatus, errorThrown) => {
          $.messager.alert('异常', `${jqXHR.status}: ${jqXHR.statusText} `, 'error');
        });
    }
  }
  //关闭窗口
  function closedetailwindow() {
    $('#detailswindow').window('close');
  }
